{
    "title": "Artifacts of the Flower of Life",
    "description": "Essay presents the continuity of historical artifacts of the Flower of Life from 1500 BC to 1500 AD",
    
    "isbn": "978-952-68480-0-6 (PDF), 978-952-68480-1-3 (EPUB), 978-952-68480-2-0 (MOBI)",
    
    "plugins": ["image-captions", "regexplace"],
    
    "pluginsConfig": {
        "regexplace": {
            "substitutes": [
                {"pattern": "<!-- nopb -->", "flags": "g", "substitute": "<div class=\"nopb\">"},
                {"pattern": "<!-- endnopb -->", "flags": "g", "substitute": "</div>"}
            ]
        },
        "image-captions": {
            "caption": "Picture _BOOK_IMAGE_NUMBER_: _CAPTION_",
            "attributes": {"style": "width: 600px"},
            "variable_name": "pictures",
            "list_caption": "_CAPTION_",
            "images": {
                "1.1": {
                    "caption": "Figure _BOOK_IMAGE_NUMBER_: _CAPTION_",
                    "list_caption": "Figure: _CAPTION_",
                    "attributes": {"width": "300", "height": "300"}
                },
                "2.1.1": {
                    "caption": "Figure _BOOK_IMAGE_NUMBER_: _CAPTION_",
                    "list_caption": "Figure: _CAPTION_",
                    "attributes": {"width": "300", "height": "300"}
                }
            }
        }
    },
    
    "styles": {
        "website": "media/website.css",
        "ebook": "media/website.css",
        "pdf": "media/website.css",
        "mobi": "media/website.css",
        "epub": "media/website.css"
    }
}
